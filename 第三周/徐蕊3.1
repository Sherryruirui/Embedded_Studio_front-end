<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">

    <title>Document</title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        ul {
            padding-left: 0;
            list-style: none;
        }

        textarea {
            display: block;
            width: 530px;
            height: 180px;
            margin: 100px auto 0;
        }

        .btn {
            width: 530px;
            margin: 0 auto;
            text-align: right;
        }

        button {
            padding: 3px 30px;
        }

        .content {
            margin: 0 auto;
            width: 530px;
        }

        .contentlist {
            line-height: 50px;
            border-bottom: 1px solid black;
            text-indent: 2em;
        }
    </style>
</head>

<body>
    <textarea cols="30" rows="10"></textarea>
    <div class="btn">
        <button>提交</button>
    </div>
    <ul class="content"></ul>
    <script>
        let btn = document.querySelector("button"),
            textArea = document.querySelector("textarea"),
            content = document.querySelector(".content");
        btn.onclick = function () {
            if (textArea.value) {
                content.innerHTML += "<li class='contentlist'>" + textArea.value + "</li>";
                textArea.value = "";
            } else {
                alert("请输入内容！")
            }
        }

    </script>
</body>

</html>
